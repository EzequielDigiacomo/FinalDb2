<div class="vehiculos-page fade-in">
    <h2>
        <svg class="icon-lg" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M14 16H9m10 0h3v-3.15a1 1 0 0 0-.84-.99L16 11l-2.7-3.6a1 1 0 0 0-.8-.4H5.24a2 2 0 0 0-1.8 1.1l-.8 1.63A6 6 0 0 0 2 12.42V16h2"></path>
            <circle cx="6.5" cy="16.5" r="2.5"></circle>
            <circle cx="16.5" cy="16.5" r="2.5"></circle>
        </svg>
        Gestión de Vehículos
    </h2>
    
    <div class="form-container">
        <h3>
            <svg class="icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <line x1="12" y1="5" x2="12" y2="19"></line>
                <line x1="5" y1="12" x2="19" y2="12"></line>
            </svg>
            Registrar Nuevo Vehículo
        </h3>
        <form action="/api/vehiculos" method="POST" class="form-grid">
            <div class="form-group">
                <label for="placa">Placa del Vehículo</label>
                <input type="text" id="placa" name="placa" placeholder="ABC-123" maxlength="10" required>
            </div>
            <div class="form-group">
                <label for="marca">Marca</label>
                <input type="text" id="marca" name="marca" placeholder="Ej: Toyota, Ford" required>
            </div>
            <div class="form-group">
                <label for="modelo">Modelo</label>
                <input type="text" id="modelo" name="modelo" placeholder="Ej: Corolla, Focus" required>
            </div>
            <div class="form-group">
                <label for="año">Año</label>
                <input type="number" id="año" name="año" placeholder="2024" min="1900" max="2030" required>
            </div>
            <div class="form-group">
                <label for="color">Color</label>
                <input type="text" id="color" name="color" placeholder="Ej: Blanco, Negro" required>
            </div>
            <div class="form-actions">
                <button type="submit" class="btn btn-success">
                    <svg class="icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <polyline points="20 6 9 17 4 12"></polyline>
                    </svg>
                    Registrar Vehículo
                </button>
            </div>
        </form>
    </div>

    <div class="table-container">
        <div class="table-header">
            <h3>
                <svg class="icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <line x1="8" y1="6" x2="21" y2="6"></line>
                    <line x1="8" y1="12" x2="21" y2="12"></line>
                    <line x1="8" y1="18" x2="21" y2="18"></line>
                    <line x1="3" y1="6" x2="3.01" y2="6"></line>
                    <line x1="3" y1="12" x2="3.01" y2="12"></line>
                    <line x1="3" y1="18" x2="3.01" y2="18"></line>
                </svg>
                Vehículos Registrados
            </h3>
            <div class="table-actions">
                <span class="badge badge-info">Total: {{vehiculos.length}}</span>
            </div>
        </div>
        <table>
            <thead>
                <tr>
                    <th>Placa</th>
                    <th>Marca</th>
                    <th>Modelo</th>
                    <th>Año</th>
                    <th>Color</th>
                    <th>Estado</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each vehiculos}}
                <tr>
                    <td><strong>{{this.placa}}</strong></td>
                    <td>{{this.marca}}</td>
                    <td>{{this.modelo}}</td>
                    <td>{{this.año}}</td>
                    <td>{{this.color}}</td>
                    <td>
                        <span class="badge {{#if this.activo}}badge-success{{else}}badge-danger{{/if}}">
                            {{#if this.activo}}
                                <svg class="icon" style="width: 14px; height: 14px;" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <polyline points="20 6 9 17 4 12"></polyline>
                                </svg>
                                Activo
                            {{else}}
                                <svg class="icon" style="width: 14px; height: 14px;" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <line x1="18" y1="6" x2="6" y2="18"></line>
                                    <line x1="6" y1="6" x2="18" y2="18"></line>
                                </svg>
                                Inactivo
                            {{/if}}
                        </span>
                    </td>
                    <td class="actions">
                        <button class="btn btn-danger btn-sm" onclick="eliminarVehiculo('{{this._id}}', '{{this.placa}}')">
                            <svg class="icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <polyline points="3 6 5 6 21 6"></polyline>
                                <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                            </svg>
                            Eliminar
                        </button>
                    </td>
                </tr>
                {{else}}
                <tr>
                    <td colspan="7" class="text-center text-muted">No hay vehículos registrados.</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>